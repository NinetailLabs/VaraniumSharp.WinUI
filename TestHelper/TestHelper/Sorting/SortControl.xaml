<UserControl
    x:Class="TestHelper.Sorting.SortControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestHelper.Sorting"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sortModule="using:VaraniumSharp.WinUI.SortModule"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38" />
            <RowDefinition Height="*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0">
            This is a sorting control
        </TextBlock>

        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <GridView
                AllowDrop="True"
                BorderBrush="{ThemeResource ButtonBorderThemeBrush}"
                BorderThickness="1"
                CanDrag="True"
                CanDragItems="True"
                CanReorderItems="True"
                CornerRadius="5"
                DragItemsStarting="ListViewBase_OnDragItemsStarting"
                Grid.Column="0"
                ItemContainerStyle="{ThemeResource SortEntryContainer}"
                ItemsSource="{x:Bind Path=SortablePropertyModule.AvailableSortEntries}"
                Width="270">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="sortModule:SortOrderEntry">
                        <Border
                            BorderBrush="{ThemeResource ToggleSwitchOuterBorderBorderThemeBrush}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Height="38"
                            Width="250">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    HorizontalTextAlignment="Left"
                                    Margin="5,0"
                                    Text="{x:Bind Path=SortHeader}"
                                    ToolTipService.ToolTip="{x:Bind Path=SortTooltip}"
                                    VerticalAlignment="Center"/>

                                <Button
                                    Content="{x:Bind Path=SortIcon, Mode=OneWay}"
                                    Click="{x:Bind Path=ChangeDirectionClick}"
                                    Grid.Column="1"
                                    Height="38"
                                    HorizontalAlignment="Right"
                                    Width="60"/>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid 
                            HorizontalAlignment="Center"
                            Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>

            <GridView
                AllowDrop="True"
                BorderBrush="AliceBlue"
                BorderThickness="2"
                CanDrag="True"
                CanDragItems="True"
                CanReorderItems="True"
                Drop="UIElement_OnDrop"
                DragOver="UIElement_OnDragOver"
                Grid.Column="1"
                ItemsSource="{x:Bind Path=SortablePropertyModule.EntriesSortedBy}"
                Width="260">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="sortModule:SortOrderEntry">
                        <Border
                            BorderBrush="Beige"
                            BorderThickness="2"
                            Height="38"
                            Width="250">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Text="{x:Bind Path=SortHeader}"
                                    ToolTipService.ToolTip="{x:Bind Path=SortTooltip}" />

                                <Button
                                    Content="{x:Bind Path=SortIcon, Mode=OneWay}"
                                    Click="{x:Bind Path=ChangeDirectionClick}"
                                    Grid.Column="1"
                                    Height="38"
                                    Width="60"/>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>

        </Grid>

        <GridView
            Grid.Row="2"
            Margin="10"
            ItemsSource="{x:Bind Path=CollectionView}">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="local:SortableEntry">
                    <Border
                        BorderBrush="AliceBlue"
                        BorderThickness="2">
                        <Grid 
                            Height="100"
                            Width="250">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Grid.Row="0"
                                Text="Id:" />
                            <TextBlock
                                Grid.Column="1"
                                Grid.Row="0"
                                Text="{x:Bind Path=Id}" />

                            <TextBlock
                                Grid.Column="0"
                                Grid.Row="1"
                                Text="Title:" />
                            <TextBlock
                                Grid.Column="1"
                                Grid.Row="1"
                                Text="{x:Bind Path=Title}" />

                            <TextBlock
                                Grid.Column="0"
                                Grid.Row="2"
                                Text="Position:" />
                            <TextBlock
                                Grid.Column="1"
                                Grid.Row="2"
                                Text="{x:Bind Path=Position}" />

                        </Grid>
                    </Border>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

    </Grid>
</UserControl>
